<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.evoting</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="e-Voting" string="e-Voting" data-key="account" groups="base.user_admin">
                    <h2>Smart Contract</h2>
                    <div class="row mt16 o_settings_container" name="vit_election_contract_address">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="vit_election_contract_address"
                            title="Ethereum based Smart contract address.">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Smart Contract Address</span>
                                <!-- <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." role="img"/> -->
                                <div class="text-muted">
                                    Ethereum based Smart contract address
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Smart Contract Address" for="vit_election_contract_address" class="col-lg-3 o_light_label"/>
                                        <field name="vit_election_contract_address" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mt16 o_settings_container" name="vit_election_system_address">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="vit_election_system_address"
                            title="Ethereum based Smart contract address.">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">System Address</span>
                                <!-- <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." role="img"/> -->
                                <div class="text-muted">
                                    System account that will pay for transaction gas fees. Must have enough balance on mainnet.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="System Address" for="vit_election_system_address" class="col-lg-3 o_light_label"/>
                                        <field name="vit_election_system_address" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                                        
                    <div class="row mt16 o_settings_container" name="vit_election_bsc_url">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="vit_election_bsc_url"
                            title="Ethereum address">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Ethereum Address</span>
                                <!-- <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." role="img"/> -->
                                <div class="text-muted">
                                    Ethereum RPC server address.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Ethereum Address" for="vit_election_bsc_url" class="col-lg-3 o_light_label"/>
                                        <field name="vit_election_bsc_url" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                                                            
                    <div class="row mt16 o_settings_container" name="vit_election_chain_id">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="vit_election_chain_id"
                            title="Ethereum Chain ID">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Ethereum Chain ID</span>
                                <!-- <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." role="img"/> -->
                                <div class="text-muted">
                                    Ethereum Chain ID
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Ethereum Chain ID" for="vit_election_chain_id" class="col-lg-3 o_light_label"/>
                                        <field name="vit_election_chain_id" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                                                                                
                    <div class="row mt16 o_settings_container" name="vit_election_abi">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="vit_election_abi"
                            title="Smart Contract ABI">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Smart Contract ABI</span>
                                <!-- <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." role="img"/> -->
                                <div class="text-muted">
                                    Smart Contract ABI
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Smart Contract ABI" for="vit_election_abi" class="col-lg-3 o_light_label"/>
                                        <field name="vit_election_abi" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </xpath>
        </field>
    </record>

</odoo>
